{
    "manifest_version": 2,
    "name": "Simply Suspend Tab",
    "version": "0.1",
    "description": "Suspends the chosen tab, reducing memory usage.",
    "applications": {
        "gecko": {
            "id": "simplySuspendTab@example.com",
            "strict_min_version": "58.0"
        }
    },
    "permissions": [
        "tabs",
        "menus",
        "*://*/*"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    }
}
